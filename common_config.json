{
  "resources": [
    {
      "path":"google-services.json",
      "to":"platforms/android/app/",
      "platforms": [
        "android"
      ]
    },
    {
      "path":"GoogleService-Info.plist",
      "to":"platforms/ios/",
      "platforms": [
        "ios"
      ]
    },
    {
      "path":"qbix_google_play_console.json",
      "to":"platforms/android/",
